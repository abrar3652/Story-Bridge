{
  "name": "StoryBridge - TPRS Educational Stories PWA",
  "short_name": "StoryBridge",
  "description": "Mobile-first, offline-capable PWA delivering TPRS-based educational stories for children aged 4-10 in low-connectivity environments",
  "icons": [
    {
      "src": "icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icon-512x512.png", 
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "start_url": "/",
  "display": "standalone",
  "theme_color": "#f97316",
  "background_color": "#fef3c7",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "categories": ["education", "kids", "stories", "tprs", "offline-learning"],
  "prefer_related_applications": false,
  "display_override": ["window-controls-overlay", "standalone", "fullscreen"],
  "edge_side_panel": {
    "preferred_width": 320
  },
  "shortcuts": [
    {
      "name": "Stories Library",
      "short_name": "Stories",
      "description": "Browse available educational stories",
      "url": "/stories",
      "icons": [
        {
          "src": "icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "My Progress",
      "short_name": "Progress",
      "description": "View learning progress and achievements",
      "url": "/progress",
      "icons": [
        {
          "src": "icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Offline Mode",
      "short_name": "Offline",
      "description": "Access downloaded stories offline",
      "url": "/offline",
      "icons": [
        {
          "src": "icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  "related_applications": [],
  "protocol_handlers": [
    {
      "protocol": "web+storybridge",
      "url": "/share?url=%s"
    }
  ]
}